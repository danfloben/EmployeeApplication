@model IEnumerable<EmployeeApplication.Business.Entities.Employee>
@{
    ViewBag.Title = "Employees";
}<h2>Employees</h2>
<table class="table table-striped table-hover" id="dtBasicExample">
    <thead>
        <tr>
            <th class="th-sm">
                Id
            </th>
            <th class="th-sm">
                Name
            </th>
            <th class="th-sm">
                Age
            </th>
            <th class="th-sm">
                Salary
            </th>
            <th class="th-sm">
                Salary Anual
            </th>
        </tr>
    </thead>
    <tbody>
        @if( Model != null ) {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @item.Salary.ToString("N0")
                    </td>
                    <td>
                        @item.SalaryAnual.ToString("N0")
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Salary
            </th>
            <th>
                Salary Anual
            </th>
        </tr>
    </tfoot>
</table>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
        });
    </script>
}